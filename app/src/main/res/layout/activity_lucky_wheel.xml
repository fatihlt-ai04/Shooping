<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.LuckyWheelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kazandıran Çark'a Hoş Geldin"
                android:textColor="@color/orange"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çarkı çevir, indirim kuponlarını topla!"
                android:textColor="@color/darkGrey"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <FrameLayout
                android:id="@+id/wheelContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgLuckyWheel"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/ic_cark"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/ic_wheel_pointer"
                    android:rotation="180"
                    app:tint="@color/gold" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvWinnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                tools:text="Tebrikler! 100 TL indirim kazandınız." />

            <Button
                android:id="@+id/btnSpinWheel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Çevir"
                android:textSize="18sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvSpinLimitMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çevirme hakkınız bitmiştir."
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>